<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
              <!-- place logo here  -->
            <img src="../public/images/MSLA LOGO.png" alt="logo">
              </div>
              <h4>Hello! let's get started</h4>
              <h6 class="fw-light">Fill in your details.</h6>
              <form class="pt-3" id="formlogin">
                <div class="form-group">
                  <input type="text" id="fullName" class="form-control form-control-lg" id="exampleInputFullName1" placeholder="Full Name" required>
                </div>
                <div class="form-group">
                    <input type="email" id="email" class="form-control form-control-lg" id="exampleInputdemail1" placeholder="Email" required>
                  </div>
                <div class="form-group">
                  <input type="text" id="department" class="form-control form-control-lg" id="exampleInputdepartment1" placeholder="Department" required>
                </div>
                <div class="mt-3 btns">
                  <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >SUBMIT</button>
                 
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
<script>
const form = document.getElementById('formlogin');
if(form){
    form.addEventListener("submit",(e)=>{
    e.preventDefault();
    submit('http://127.0.0.1:8080/')
 
  })
  }
  const submit = async (url)=>{
    const fullName =   document.getElementById('fullName').value
    const email = document.getElementById('email').value
    const department= document.getElementById('department').value
   
let data = await fetch(url,{
    method:"POST",
    body:{
        fullName,
        email,
        department
    }
})
let response = data.status

if(response === 200){
 let p = document.createElement("p")
p.style.color = "blue" ;
p.textContent = `${fullName} voucher has been sent to your email ${email}`
let btns = document.querySelector(".btns")
btns.appendChild(p)
}
if (!response) {
 let p = document.createElement("p")
p.style.color = "blue" ;
p.textContent = `${fullName} your email has been used`
let btns = document.querySelector(".btns")
btns.appendChild(p)
}

}

</script>
  
